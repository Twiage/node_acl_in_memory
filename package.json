{
  "name": "node_acl_mongodb",
  "version": "4.1.1",
  "description": "An Access Control List module based on memory, or MongoDB with Express middleware support",
  "author": "Twiage",
  "forked_from": "https://github.com/flash-oss/node_acl",
  "license": "MIT",
  "engines": {
    "node": ">= 16"
  },
  "main": "./index.js",
  "dependencies": {
    "lodash": "^4.17.3"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "mongodb": "5 - 6",
    "nyc": "^15.1.0",
    "prettier": "^2.1.0"
  },
  "scripts": {
    "lint": "eslint ./",
    "test": "npm run test_memory && npm run test_mongo && npm run test_mongo_single",
    "test_memory": "ACL_BACKEND=memory mocha",
    "test_mongo": "ACL_BACKEND=mongo mocha",
    "test_mongo_single": "ACL_BACKEND=mongo_single mocha",
    "cover": "nyc npm run test"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2023
    },
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "eslint:recommended"
  }
}
